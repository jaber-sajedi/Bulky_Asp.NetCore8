@model Category
@{
    ViewData["Title"] = "Delete";
}
<div class="card shadow  border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row text-center">
            <h2 class="text-dark">Delete Category</h2>
        </div>
    </div>
    
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name"  readonly="readonly" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" readonly="readonly" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                </div>

                <div class="row pt-3">
                    <div class="col-6 col-md-3">
                        <button   asp-controller="Category" asp-action="Delete" type="submit" class="btn btn-dark form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a   asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Backt to List</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
 
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}


