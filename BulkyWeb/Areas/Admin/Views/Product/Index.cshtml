@model List<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow border-0 mt-4 pb-5">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row text-center">
            <h2 class="text-dark">Product List</h2>
        </div>
    </div>
    <div class="card-body">
        <div class="row p-3">
            <div class="col-12 text-end">
                <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-dark"><i class="bi bi-plus-circle"> New Product </i></a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
           
        </table>
    </div>
</div>

@section Scripts
{
    <script src="~/js/Product.js"></script>
}
