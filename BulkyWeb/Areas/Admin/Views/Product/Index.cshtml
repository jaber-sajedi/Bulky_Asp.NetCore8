@model List<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow border-0 mt-4 pb-5">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row text-center">
            <h2 class="text-dark">Product List</h2>
        </div>
    </div>
    <div class="card-body">
        <div class="row p-3">
            <div class="col-12 text-end">
                <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-dark"><i class="bi bi-plus-circle"> New Product </i></a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in @Model)
                {
                    <tr>
                        <th>@obj.Title</th>
                        <th>@obj.ISBN</th>
                        <th>@obj.Price</th>
                        <th>@obj.Author</th>
                         <th>@obj.Category.Name</th>
                        <th>
                            <div class="w-75 btn-group" role="group">
                                <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">  <i class="bi bi-pencil-square"> Edit </i></a>
                            </div>
                        </th>
                        <th>
                            <div class="w-75 btn-group" role="group">
                                <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">  <i class="bi bi-trash-fill"> Delete </i></a>
                            </div>
                        </th>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

